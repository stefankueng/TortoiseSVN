<appendix id="tme-keyboard">
	<title>keyboard shortcuts</title>
	<simplesect>
		<para>
		List of keyboard shortcuts and commands.
		</para>
	</simplesect>
	<sect1 id="tme-keyboard-sect-1">
		<title>Keyboard shortcuts</title>

		<variablelist>
  			<varlistentry>
  				<term>Ctrl-Q</term>
  				<listitem>
  					<para>
  					Quit the program
  					</para>
  				</listitem>
  			</varlistentry>
  			<varlistentry>
  				<term>Ctrl-C</term>
  				<listitem>
  					<para>
  					Copy the selected line(s) to the clipboard
  					</para>
  				</listitem>
  			</varlistentry>
  			<varlistentry>
  				<term>Ctrl-F</term>
  				<listitem>
  					<para>
  					Open the Find dialog for text searches
  					</para>
  				</listitem>
  			</varlistentry>
  			<varlistentry>
  				<term>Ctrl-O</term>
  				<listitem>
  					<para>
  					Open files to diff/merge
  					</para>
  				</listitem>
  			</varlistentry>
  			<varlistentry>
  				<term>Ctrl-S</term>
  				<listitem>
  					<para>
  					Save the changes
  					</para>
  				</listitem>
  			</varlistentry>
  			<varlistentry>
  				<term>Ctrl-Shift-S</term>
  				<listitem>
  					<para>
  					Save as...
  					</para>
  				</listitem>
  			</varlistentry>
  			<varlistentry>
  				<term>F7 or cursor-right</term>
  				<listitem>
  					<para>
  					Go to next difference
  					</para>
  				</listitem>
  			</varlistentry>
  			<varlistentry>
  				<term>Shift-F7 or cursor-left</term>
  				<listitem>
  					<para>
  					Go to previous difference
  					</para>
  				</listitem>
  			</varlistentry>
  			<varlistentry>
  				<term>Ctrl-D</term>
  				<listitem>
  					<para>
  					Toggle between one-pane diff and two-pane diff
  					</para>
  				</listitem>
  			</varlistentry>
  			<varlistentry>
  				<term>Ctrl-R</term>
  				<listitem>
  					<para>
  					Reload the files and revert all changes made
  					</para>
  				</listitem>
  			</varlistentry>
  			<varlistentry>
  				<term>Ctrl-T</term>
  				<listitem>
  					<para>
  					Toggles between showing whitespaces or not
  					</para>
  				</listitem>
  			</varlistentry>
 		</variablelist>
	</sect1>
</appendix>
